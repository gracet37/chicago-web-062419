<h1>Create a New Commit</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for :new_commit, url: commits_path do |f| %>
  <%= f.label :message %>
  <%= f.text_field :message %>
  <%= f.label :branch_name %>
  <%= f.text_field :branch_name %>
  <%= f.collection_select(:author_id, @authors, :id, :name, prompt: true) %>
  <%= f.submit %>
<% end %>
